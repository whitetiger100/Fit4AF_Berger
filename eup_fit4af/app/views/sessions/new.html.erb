<header id="content-header">
  <h1>Sign In</h1>
</header>

<%= form_tag(sessions_path) do %>
<fieldset>
  <p>
    <%= label_tag :email %>
    <%= email_field_tag :email, params[:email], autofocus: true %>
  </p>
  <p>
    <%= label_tag :password %>
    <%= password_field_tag :password, nil %>
  </p>
  <p>
    <%= submit_tag 'Sign In' %>
  </p>
</fieldset>
<% end %>