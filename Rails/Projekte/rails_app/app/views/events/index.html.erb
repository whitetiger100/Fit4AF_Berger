<h1>Events</h1>
<%= @events.size == 1 ? "#{@events.size} Event ist" : " #{@events.size} Events sind" %> vorhanden

<table>
	<tr>
		<th>NAME </th>
		<th>Beschreibung</th>
		<th>Datum</th>
		<th>Location</th>
		<th>Price</th>
		<th>Anzeigen</th>
		<th>Editieren</th>
		<th>Löschen</th>
	</tr>
<% @events.each do |event| %>
	<tr>
		<td><%= event.name %></td>
		<td><%= event.description %></td>
		<td><%= event.start_at %></td>
		<td><%= event.location %></td>
		<td><%= format_price(event) %></td>
		<td><%= link_to "Show", event_path(event.id) %></td>
		<td><%= link_to "Edit", edit_event_path(event.id) %></td>
		<td><%= link_to "Del", event_path(event.id), method: :delete, data: {confirm: "Wirklich löschen"} %></td>
	</tr>
<% end %>
</table>

<%= link_to "Neuen Event anlegen", new_event_path %>