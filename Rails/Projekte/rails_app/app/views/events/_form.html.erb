<%= form_for(@event) do |f| %>
	<p>
		<%= f.label :name %><br />
		<%= f.text_field :name %>
	</p>
	<p>
		<%= f.label :description %><br />
		<%= f.text_area :description %>
	</p>
	<p>
		<%= f.label :location %><br />
		<%= f.text_field :location %>
	</p>
	<p>
		<%= f.label :price %><br />
		<%= f.number_field :price %>
	</p>
	<p>
		<%= f.label :start_at %><br />
		<%= f.datetime_select :start_at %>
	</p>
	<p><%= f.submit %></p>

<% end %>